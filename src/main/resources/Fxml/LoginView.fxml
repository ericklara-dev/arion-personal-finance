<AnchorPane prefHeight="720.0" prefWidth="1280.0" styleClass="root" stylesheets="@/Css/Login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.arion.Controller.LoginViewController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <StackPane>
                <Circle radius="35" styleClass="logo-circle" />
                <Label styleClass="logo-text" text="\$" />
            </StackPane>
            <Label styleClass="header-title" text="ArionApp" />
            <Label styleClass="header-subtitle" text="Gestiona tus finanzas personales de forma segura" />

            <VBox alignment="CENTER" maxWidth="400" spacing="15.0" styleClass="card">
                <padding>
                    <Insets bottom="30" left="40" right="40" top="30" />
                </padding>

                <Label styleClass="form-title" text="Iniciar Sesión" />

                <VBox spacing="5.0" styleClass="form-field">
                    <Label text="Correo Electrónico" />
                    <HBox alignment="CENTER_LEFT" styleClass="input-group">
                        <SVGPath content="M20,4H4C2.9,4,2,4.9,2,6v12c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V6C22,4.9,21.1,4,20,4z M20,8l-8,5L4,8V6l8,5l8-5V8z" styleClass="icon" />
                        <TextField fx:id="emailField" promptText="correo@ejemplo.com" />
                    </HBox>
                </VBox>

                <VBox spacing="5.0" styleClass="form-field">
                    <Label text="Contraseña" />
                    <HBox alignment="CENTER_LEFT" styleClass="input-group" spacing="5">
                        <!-- Icono del candado -->
                        <SVGPath content="M18,8h-1V6c0-2.76-2.24-5-5-5S7,3.24,7,6v2H6c-1.1,0-2,0.9-2,2v10c0,1.1,0.9,2,2,2h12c1.1,0,2-0.9,2-2V10C20,8.9,19.1,8,18,8z
                          M12,17c-1.1,0-2-0.9-2-2s0.9-2,2-2s2,0.9,2,2S13.1,17,12,17z
                          M16.1,8H7.9V6c0-2.21,1.79-4,4.1-4s4.1,1.79,4.1,4V8z"
                                 styleClass="icon" />

                        <!-- Campo contraseña -->
                        <PasswordField fx:id="passwordField"
                                       promptText="••••••••"
                                       HBox.hgrow="ALWAYS"
                                       prefWidth="250"/>

                        <!-- Icono del ojo -->
                        <SVGPath content="M12,4.5C7,4.5,2.73,7.61,1,12c1.73,4.39,6,7.5,11,7.5s9.27-3.11,11-7.5C21.27,7.61,17,4.5,12,4.5z
                          M12,17c-2.76,0-5-2.24-5-5s2.24-5,5-5s5,2.24,5,5S14.76,17,12,17z
                          M12,9c-1.66,0-3,1.34-3,3s1.34,3,3,3s3-1.34,3-3S13.66,9,12,9z"
                                 styleClass="icon-eye"/>
                    </HBox>
                </VBox>


                <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 5 0 5 0;">
                    <Pane HBox.hgrow="ALWAYS" />
                    <Hyperlink text="¿Olvidaste tu contraseña?" />
                </HBox>

                <Button maxWidth="Infinity" onAction="#Session" styleClass="button-primary" text="Iniciar Sesión" />

                <HBox alignment="CENTER" spacing="5.0">
                    <Label text="¿No tienes una cuenta?" />
                    <Hyperlink onAction="#RegisterView" text="Regístrate aquí" />
                </HBox>
            </VBox>

            <TextFlow styleClass="footer-text" textAlignment="CENTER">
                <Text text="Al iniciar sesión, aceptas nuestros " />
                <Hyperlink text="Términos de Uso" />
                <Text text=" y " />
                <Hyperlink text="Política de Privacidad" />
            </TextFlow>
        </VBox>
    </children>
</AnchorPane>
